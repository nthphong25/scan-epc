{
  "name": "scan-epc",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.my-electron-app",
    "productName": "Scan EPC",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      ".env",
      "main.js",
      "index.html",
      "renderer.js",
      "offline.js",
      "offline.db",
      "last.db",
      "errors.db",
      "node_modules/**/*",
      "dist/**/*",
      "assets/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "classic": "^0.0.2",
    "dotenv": "^16.4.7",
    "mssql": "^11.0.1",
    "nedb": "^1.8.0",
    "nodb": "^0.0.1"
  }
}
